{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "prettier/@typescript-eslint"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "rules": {
    "curly": "warn",
    "no-var": 2,
    "prefer-const": "error",
    "space-before-blocks": "error",
    "spaced-comment": "warn",
    "@typescript-eslint/no-explicit-any": "error"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
